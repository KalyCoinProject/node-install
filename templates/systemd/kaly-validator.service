[Unit]
Description=KalyChain Validator Node Service
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=200

[Service]
Type=simple
Restart=always
RestartSec=30
User=%USER%
Group=%USER%
LimitNOFILE=65536
WorkingDirectory=/home/%USER%/node/
ExecStart=/home/%USER%/besu/bin/besu --config-file=/home/%USER%/node-install/configs/validator/config.toml
StandardOutput=journal
StandardError=journal
SyslogIdentifier=kaly-validator
Environment=LOG4J_CONFIGURATION_FILE=/home/%USER%/node-install/configs/validator/log-config.xml

[Install]
WantedBy=multi-user.target
